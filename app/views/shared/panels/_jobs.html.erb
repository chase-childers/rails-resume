<div class="tab">
<% section["jobs"].each do |job| %>
<button class="tablinks" onclick="openTab(event, '<%=job["company"]%>')"><%=job["company"]%> </button>
<% end %>
</div>

<% section["jobs"].each do |job| %>
    <div class="tabcontent" id="<%= job["company"] %>" style="display:none">
    <h2><%= job["company"] %></h2>
    <p><%= job["time"] %></p>
    <% job["positions"].each do |pos| %>
        <div class="positions">
            <h3><%= pos["team"] %> - <%= pos["title"] %></h3>
            <ul>
            <% pos["points"].each do |point| %>
                <li><%= point %></li>
            <% end %>
            </ul>
        </div>
    <% end %>    
    </div>
<% end %>