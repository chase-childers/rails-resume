<div class="jobs_section">

<% section["jobs"].each_with_index do |job, index| %>
    <div class="tabcontent" id="<%= job["company"] %>" style="display:block">
    <div class="jobheader">
    <% if job["asset"] %><img src="<%= job["asset"] %>"><% end %>
    <h2><%= job["company"] %></h2>
    <p><%= job["time"] %></p>
    </div>
    <% job["positions"].each do |pos| %>
        <div class="positions">
            <h3><%= pos["team"] %> </h3>
            <p><%= pos["title"] %></p>
            <ul class="points">
            <% pos["points"].each do |point| %>
                <li><%= point %></li>
            <% end %>
            </ul>
        </div>
    <% end %>    
    </div>
<% end %>
</div>